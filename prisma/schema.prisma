generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  student
  admin
  superadmin
}

enum AuthProvider {
  credentials
  google
}

enum EnrollmentStatus {
  active
  refunded
  expired
}

enum ServiceOrderStatus {
  pending_payment
  pending_kickoff
  in_progress
  completed
  cancelled
  refunded
}

enum TokenAction {
  generated
  validated
  viewed
  expired
  revoked
  rejected
}

model User {
  id               String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email            String          @unique
  password_hash    String?
  full_name        String?
  avatar_url       String?
  role             UserRole        @default(student)
  auth_provider    AuthProvider    @default(credentials)
  email_verified   Boolean         @default(false)
  is_active        Boolean         @default(true)
  last_login       DateTime?
  created_at       DateTime        @default(now()) @db.Timestamptz(6)
  updated_at       DateTime        @updatedAt @db.Timestamptz(6)

  enrollments            Enrollment[]
  lessonProgress         LessonProgress[]
  videoTokens            VideoToken[]
  serviceOrders          ServiceOrder[]
  adminAuditLogs         AdminAuditLog[] @relation("AdminAuditLogs")
  tokenUsageLogs         TokenUsageLog[]
  activeSessions         ActiveVideoSession[]
  sessions               Session[]
  passwordResets         PasswordResetToken[]
  emailVerifications     EmailVerificationToken[]
  tierPurchases          TierPurchase[]
  scholarshipsGranted    Scholarship[] @relation("ScholarshipsGranted")
  scholarshipsReceived   Scholarship[] @relation("ScholarshipsReceived")
  cryptoPayments         CryptoPayment[]
  paypalPayments         PaypalPayment[]
  proQueries             ProQuery[]
  scholarshipApplications ScholarshipApplication[]
  lessonReviews          LessonReview[]
  courseReviews          CourseReview[]

  @@map("users")
}

model Session {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String   @db.Uuid
  token_hash String   @unique
  ip_address String?
  user_agent String?
  expires_at DateTime @db.Timestamptz(6)
  created_at DateTime @default(now()) @db.Timestamptz(6)

  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([expires_at])
  @@map("sessions")
}

model PasswordResetToken {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String   @db.Uuid
  token_hash String   @unique
  expires_at DateTime @db.Timestamptz(6)
  used_at    DateTime? @db.Timestamptz(6)
  created_at DateTime @default(now()) @db.Timestamptz(6)

  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("password_reset_tokens")
}

model EmailVerificationToken {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String   @db.Uuid
  token_hash String   @unique
  expires_at DateTime @db.Timestamptz(6)
  used_at    DateTime? @db.Timestamptz(6)
  created_at DateTime @default(now()) @db.Timestamptz(6)

  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@map("email_verification_tokens")
}

model Course {
  id                     String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  slug                   String       @unique
  title                  String
  subtitle               String?
  description            String?
  long_description       String?
  thumbnail_url          String?
  preview_video_url      String?
  price_cents            Int
  currency               String       @default("USD")
  difficulty             String?
  category               String?
  tags                   String[]
  total_duration_minutes Int?
  total_lessons          Int?
  is_published           Boolean      @default(false)
  is_featured            Boolean      @default(false)
  is_coming_soon         Boolean      @default(false)
  tier_access            String       @default("basic")
  launch_date            DateTime?    @db.Timestamptz(6)
  created_at             DateTime     @default(now()) @db.Timestamptz(6)
  updated_at             DateTime     @updatedAt @db.Timestamptz(6)

  modules                Module[]
  lessons                Lesson[]
  enrollments            Enrollment[]
  lessonProgress         LessonProgress[]
  videoTokens            VideoToken[]
  lessonReviews          LessonReview[]
  courseReviews          CourseReview[]

  @@map("courses")
}

model Module {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  course_id   String   @db.Uuid
  title       String
  description String?
  sort_order  Int
  created_at  DateTime @default(now()) @db.Timestamptz(6)

  course      Course   @relation(fields: [course_id], references: [id], onDelete: Cascade)
  lessons     Lesson[]

  @@map("modules")
}

model Lesson {
  id                  String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  module_id           String?          @db.Uuid
  course_id           String           @db.Uuid
  title               String
  description         String?
  youtube_video_id    String?
  bunny_video_id      String?
  bunny_thumbnail_url String?
  duration_minutes    Int?
  sort_order          Int
  is_free_preview     Boolean          @default(false)
  is_pro_only         Boolean          @default(false)
  resources           Json?
  created_at          DateTime         @default(now()) @db.Timestamptz(6)

  module           Module?          @relation(fields: [module_id], references: [id], onDelete: SetNull)
  course           Course           @relation(fields: [course_id], references: [id], onDelete: Cascade)
  lessonProgress   LessonProgress[]
  videoTokens      VideoToken[]
  lessonReviews    LessonReview[]

  @@map("lessons")
}

model Enrollment {
  id                         String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id                    String           @db.Uuid
  course_id                  String           @db.Uuid
  mp_payment_id              String?
  mp_preference_id           String?
  payment_provider           String?
  binance_order_id           String?
  amount_paid_cents          Int?
  currency                   String           @default("USD")
  status                     EnrollmentStatus @default(active)
  enrolled_at                DateTime         @default(now()) @db.Timestamptz(6)

  user                       User             @relation(fields: [user_id], references: [id], onDelete: Cascade)
  course                     Course           @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@unique([user_id, course_id])
  @@map("enrollments")
}

model LessonProgress {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id         String   @db.Uuid
  lesson_id       String   @db.Uuid
  course_id       String   @db.Uuid
  is_completed    Boolean  @default(false)
  watched_seconds Int      @default(0)
  last_watched_at DateTime @default(now()) @db.Timestamptz(6)
  completed_at    DateTime? @db.Timestamptz(6)

  user            User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  lesson          Lesson   @relation(fields: [lesson_id], references: [id], onDelete: Cascade)
  course          Course   @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@unique([user_id, lesson_id])
  @@map("lesson_progress")
}

model VideoToken {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token        String   @unique
  user_id      String   @db.Uuid
  lesson_id    String   @db.Uuid
  course_id    String   @db.Uuid
  expires_at   DateTime @db.Timestamptz(6)
  max_views    Int      @default(1)
  current_views Int     @default(0)
  ttl_seconds  Int      @default(14400)
  ip_address   String?
  user_agent   String?
  allowed_ips  String[]
  is_revoked   Boolean  @default(false)
  revoked_at   DateTime? @db.Timestamptz(6)
  revoked_reason String?
  created_at   DateTime @default(now()) @db.Timestamptz(6)
  last_used_at DateTime? @db.Timestamptz(6)

  user         User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  lesson       Lesson   @relation(fields: [lesson_id], references: [id], onDelete: Cascade)
  course       Course   @relation(fields: [course_id], references: [id], onDelete: Cascade)
  usageLogs    TokenUsageLog[]
  activeSession ActiveVideoSession?

  @@map("video_tokens")
}

model TokenUsageLog {
  id              String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token_id        String      @db.Uuid
  user_id         String?     @db.Uuid
  ip_address      String?
  user_agent      String?
  action          TokenAction
  rejection_reason String?
  metadata        Json?
  created_at      DateTime    @default(now()) @db.Timestamptz(6)

  token           VideoToken  @relation(fields: [token_id], references: [id], onDelete: Cascade)
  user            User?       @relation(fields: [user_id], references: [id], onDelete: SetNull)

  @@map("token_usage_logs")
}

model Service {
  id                String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  slug              String        @unique
  title             String
  short_description String?
  long_description  String?
  icon              String?
  price_range       String?
  delivery_time     String?
  features          String[]
  is_featured       Boolean       @default(false)
  sort_order        Int?
  is_active         Boolean       @default(true)
  created_at        DateTime      @default(now()) @db.Timestamptz(6)

  orders            ServiceOrder[]

  @@map("services")
}

model ServiceOrder {
  id                         String             @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id                    String             @db.Uuid
  service_id                 String             @db.Uuid
  status                     ServiceOrderStatus @default(pending_payment)
  quoted_amount_cents        Int
  paid_amount_cents          Int?
  currency                   String             @default("USD")
  customer_config            Json?
  mp_payment_id              String?
  mp_preference_id           String?
  no_refund_accepted_at      DateTime?          @db.Timestamptz(6)
  paid_at                    DateTime?          @db.Timestamptz(6)
  created_at                 DateTime           @default(now()) @db.Timestamptz(6)
  updated_at                 DateTime           @updatedAt @db.Timestamptz(6)

  user                       User               @relation(fields: [user_id], references: [id], onDelete: Cascade)
  service                    Service            @relation(fields: [service_id], references: [id], onDelete: Restrict)

  @@map("service_orders")
}

model ContactMessage {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name             String
  email            String
  company          String?
  service_interest String?
  budget_range     String?
  message          String
  is_read          Boolean  @default(false)
  is_archived      Boolean  @default(false)
  admin_notes      String?
  responded_at     DateTime? @db.Timestamptz(6)
  created_at       DateTime @default(now()) @db.Timestamptz(6)

  @@map("contact_messages")
}

model Testimonial {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  author_name       String
  author_role       String?
  author_avatar_url String?
  content           String
  rating            Int?
  service_or_course String?
  is_featured       Boolean  @default(false)
  is_published      Boolean  @default(true)
  sort_order        Int?
  created_at        DateTime @default(now()) @db.Timestamptz(6)

  @@map("testimonials")
}

model SiteConfig {
  key        String   @id
  value      Json
  updated_at DateTime @default(now()) @db.Timestamptz(6)

  @@map("site_config")
}

model AdminAuditLog {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  admin_user_id String  @db.Uuid
  action       String
  target_table String?
  target_id    String?
  metadata     Json?
  created_at   DateTime @default(now()) @db.Timestamptz(6)

  adminUser    User     @relation("AdminAuditLogs", fields: [admin_user_id], references: [id], onDelete: Cascade)

  @@map("admin_audit_logs")
}

model RateLimitEvent {
  id         BigInt   @id @default(autoincrement())
  route      String
  actor_key  String
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@index([route, actor_key, created_at])
  @@map("rate_limit_events")
}

model ActiveVideoSession {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id        String   @db.Uuid
  token_id       String   @unique @db.Uuid
  fingerprint    String
  ip_address     String
  last_heartbeat DateTime @default(now()) @db.Timestamptz(6)
  created_at     DateTime @default(now()) @db.Timestamptz(6)

  user  User       @relation(fields: [user_id], references: [id], onDelete: Cascade)
  token VideoToken @relation(fields: [token_id], references: [id], onDelete: Cascade)

  @@index([user_id, last_heartbeat])
  @@map("active_video_sessions")
}

model PaymentTransaction {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  mp_payment_id    String?  @unique
  binance_order_id String?  @unique
  payment_provider String   @default("mercadopago")
  amount_cents     Int
  currency         String
  status           String
  metadata         Json?
  created_at       DateTime @default(now()) @db.Timestamptz(6)

  @@map("payment_transactions")
}

model PaymentEvent {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  event_id   String   @unique
  type       String
  payload    Json
  created_at DateTime @default(now()) @db.Timestamptz(6)

  @@map("payment_events")
}

model TierPurchase {
  id                String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id           String       @db.Uuid
  tier              String       // "basic" | "pro"
  status            String       @default("active") // active | refunded
  payment_provider  String       // "mercadopago" | "binance" | "admin_grant"
  payment_reference String?
  amount_paid_cents Int
  currency          String       @default("USD")
  purchased_at      DateTime     @default(now()) @db.Timestamptz(6)
  expires_at        DateTime?    @db.Timestamptz(6)

  user        User         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  scholarship Scholarship?

  @@index([user_id, tier])
  @@map("tier_purchases")
}

model Scholarship {
  id                String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  scholarship_code  String    @unique // "BECA-XXXX" human-readable identifier
  grantor_id        String    @db.Uuid
  tier_purchase_id  String    @unique @db.Uuid
  recipient_email   String?   // set when grantor assigns manually
  recipient_user_id String?   @db.Uuid
  status            String    @default("unassigned") // unassigned | pending | active | expired | revoked
  invite_token      String    @unique
  pool_available_at DateTime  @db.Timestamptz(6) // when it enters the pool (purchase + 7 days)
  application_id    String?   @unique @db.Uuid // linked ScholarshipApplication if assigned from pool
  applicant_reason  String?   // copied from application for Pro user notification
  granted_at        DateTime  @default(now()) @db.Timestamptz(6)
  assigned_at       DateTime? @db.Timestamptz(6) // when grantor assigned or auto-assigned
  redeemed_at       DateTime? @db.Timestamptz(6)
  expires_at        DateTime? @db.Timestamptz(6)

  grantor      User                    @relation("ScholarshipsGranted", fields: [grantor_id], references: [id], onDelete: Cascade)
  recipient    User?                   @relation("ScholarshipsReceived", fields: [recipient_user_id], references: [id], onDelete: SetNull)
  tierPurchase TierPurchase            @relation(fields: [tier_purchase_id], references: [id], onDelete: Cascade)
  application  ScholarshipApplication? @relation(fields: [application_id], references: [id], onDelete: SetNull)

  @@index([status, pool_available_at])
  @@map("scholarships")
}

model ScholarshipApplication {
  id          String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String    @db.Uuid
  reason      String    // why they should receive the scholarship
  status      String    @default("pending") // pending | approved | rejected
  created_at  DateTime  @default(now()) @db.Timestamptz(6)
  reviewed_at DateTime? @db.Timestamptz(6)

  user        User         @relation(fields: [user_id], references: [id], onDelete: Cascade)
  scholarship Scholarship?

  @@index([status, created_at])
  @@map("scholarship_applications")
}

model BinancePayment {
  id                String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  binance_order_id  String   @unique
  merchant_trade_no String   @unique
  status            String   // INITIAL | PENDING | PAID | CANCELED | REFUNDED | EXPIRED
  amount            String
  currency          String
  metadata          Json?
  created_at        DateTime @default(now()) @db.Timestamptz(6)
  updated_at        DateTime @updatedAt @db.Timestamptz(6)

  @@map("binance_payments")
}

model CryptoPayment {
  id           String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  order_id     String    @unique
  user_id      String    @db.Uuid
  type         String    // "course" | "tier"
  target_id    String    // course_id or tier name ("basic"/"pro")
  amount_usdt  String    // exact amount with random cents e.g. "30.17"
  status       String    @default("pending") // pending | completed | expired
  tx_hash      String?   // blockchain tx hash once detected
  expires_at   DateTime  @db.Timestamptz(6)
  completed_at DateTime? @db.Timestamptz(6)
  created_at   DateTime  @default(now()) @db.Timestamptz(6)
  updated_at   DateTime  @updatedAt @db.Timestamptz(6)

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([status, expires_at])
  @@map("crypto_payments")
}

model PaypalPayment {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id         String    @db.Uuid
  tier            String    // "basic" | "pro"
  amount_usd_cents Int      // amount in USD cents (2900 = $29)
  status          String    @default("pending") // pending | approved | rejected
  screenshot_b64  String    @db.Text // base64 data URL of payment screenshot
  approved_at     DateTime? @db.Timestamptz(6)
  created_at      DateTime  @default(now()) @db.Timestamptz(6)
  updated_at      DateTime  @updatedAt @db.Timestamptz(6)

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([status, created_at])
  @@map("paypal_payments")
}

model ProQuery {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String    @db.Uuid
  question   String    // user's question (direct, concise)
  answer     String?   // admin's response
  status     String    @default("pending") // pending | answered
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  answered_at DateTime? @db.Timestamptz(6)

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([status, created_at])
  @@map("pro_queries")
}

model LessonReview {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String   @db.Uuid
  lesson_id  String   @db.Uuid
  course_id  String   @db.Uuid
  rating     Int      // 1-5
  comment    String?  @db.VarChar(280)
  created_at DateTime @default(now()) @db.Timestamptz(6)

  user   User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  lesson Lesson @relation(fields: [lesson_id], references: [id], onDelete: Cascade)
  course Course @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@unique([user_id, lesson_id])
  @@map("lesson_reviews")
}

model CourseReview {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id     String   @db.Uuid
  course_id   String   @db.Uuid
  rating      Int      // 1-5
  comment     String   @db.VarChar(500)
  is_featured Boolean  @default(false)
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  updated_at  DateTime @updatedAt @db.Timestamptz(6)

  user   User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
  course Course @relation(fields: [course_id], references: [id], onDelete: Cascade)

  @@unique([user_id, course_id])
  @@map("course_reviews")
}
